option_settings:
  aws:elb:listener:80:
    ListenerEnabled: true
  aws:elb:listener:443:
    ListenerEnabled: true
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx

files:
  "/etc/nginx/conf.d/https_redirect.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 80;
          return 301 https://$host$request_uri;
      }
